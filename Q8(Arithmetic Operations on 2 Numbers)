echo "Enter a: "
read a 
echo "Enter b: "
read b
echo "
1. Add
2. Subtract
3. Multiply
4. Divide
5. Remainder"
echo "Choose 1-5 = "
read ch
case $ch in
1) echo "Sum = " `expr $a + $b`;;
2) echo "Difference = " `expr $a - $b`;;
3) echo "Product = " `expr $a \* $b`;;
4) echo "Quotient = " `expr $a / $b`;;
5) echo "Remainder = " `expr $a % $b`;;
*) echo "Error , chosse 1-5 "
esac
